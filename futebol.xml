<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:height="50dp"
            android:gravity="center"
            android:text="Time 1"
            android:textSize="30dp" />


        <TextView
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:height="50dp"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:text="Time 2"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:height="50dp"
            android:background="#DCDCDC"
            android:gravity="center"
           android:text="0"
            android:textColor="#20B2AA"
            android:textSize="50dp"
            android:id="@+id/time1pontos"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="50dp"
            android:text="X"
            android:textColor="#40E0D0"
            android:textSize="30dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:height="50dp"
            android:gravity="center"
            android:text="0"
            android:background="#DCDCDC"
            android:textColor="#20B2AA"
            android:textSize="50dp"
            android:id="@+id/time2pontos"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:text="Vitorias: 0"
            android:textSize="30dp"
            android:id="@+id/time1vitorias"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:text="Vitorias: 0"
            android:textSize="30dp"
            android:id="@+id/time2vitorias"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="ADICIONAR GOLS:"
            android:textColor="#000"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <Button
            android:id="@+id/adicionagol"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="#40E0D0"
            android:text="+1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/decrementagol"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="#40E0D0"
            android:text="-1"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="TEMPO:"
            android:textColor="#000"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textSize="35dp"
            android:text="10:00"
            android:textColor="#000"
            android:id="@+id/textviewDoTempo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botaoPlay"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="#40E0D0"
            android:text="play"
            android:textSize="10dp" />

        <Button
            android:id="@+id/botaoTerminar"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="#40E0D0"
            android:text="terminar"
            android:textSize="10dp" />

        <Button
            android:id="@+id/botaoPause"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="#40E0D0"
            android:text="pause"
            android:textSize="10dp" />

        <Button
            android:id="@+id/botaoReset"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="#40E0D0"
            android:text="Reset"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/botaoVoltar"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@drawable/botao_voltar_estilo"
            />


    </LinearLayout>

</LinearLayout>